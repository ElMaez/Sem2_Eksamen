---
import "../styles/global.css";
---

<section class="Recommended_container">
  <img
    src="/img/SVG/aniseflowerbrown.svg"
    alt="brown anise flower graphic"
    class="Brown_anise"
  />
  <img
    src="/img/SVG/driedanise.svg"
    alt="dried anise flowers"
    class="Dried_anise"
  />
  <img src="/img/SVG/grapesblue.svg" alt="blue grapes" class="Blue_grapes" />
  <section class="backgroundcolor">
    <div class="text"><h3>We recommend you pair it with these dishes</h3></div>

    <div class="img_container">
      <img src="/img/food1.jpg" />
      <img src="/img/food2.jpg" />
      <img src="/img/food3.jpg" />
      <img src="/img/food4.jpg" />
    </div>
  </section>
</section>

<style>
  .img_container {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    z-index: 0;
    padding-bottom: 2em;
  }

  .img_container img {
    width: 20%;
  }

  .Blue_grapes {
    grid-column: 4/5;
    grid-row: 5/7;
    z-index: 1;
    justify-self: center;
    align-self: stretch;
    width: 80%;
  }

  .Dried_anise {
    grid-column: 4/5;
    grid-row: 2/4;
    z-index: 1;
    justify-self: center;
    align-self: stretch;
    width: 80%;
  }

  .Brown_anise {
    grid-column: 1/2;
    grid-row: 1/3;
    z-index: 1;
    justify-self: center;
    align-self: end;
    width: 80%;
  }

  .backgroundcolor {
    background-color: var(--Secondary_Sand);
    z-index: -1;
    grid-column: 1/-1;
    grid-row: 3/6;
  }

  .Recommended_container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-template-rows: repeat(6, 1fr);
  }

  h3 {
    color: var(--Primary_Blue);
    font-size: 2vw;
  }

  .text {
    grid-column: 1/3;
    grid-row: 3/4;
    padding-left: 2em;
    padding-top: 1em;
    padding-bottom: 2em;
  }
</style>
