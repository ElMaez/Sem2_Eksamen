<style>
  .outer_container {
    height: 10px;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
  }
  .if_container {
    grid-column: 1/-1;
    grid-row: 1/2;

    display: grid;
    grid-template-columns: 5% 15% 10% 40% 30%;
    grid-template-rows: 1fr 15% 15% 10%;

    height: 400px;
  }

  .if_container .img1 {
    grid-column: 5/-1;
    grid-row: 1/3;
  }

  .if_container .img1 img {
    max-height: 100%;
    aspect-ratio: 0.84:1;
    margin-top:5%;
  }

  .if_container .img2 {
    grid-column: 2/4;
    grid-row: 1/4;
    z-index: 2;
  }

  .if_container .img2 img {
    max-height: 100%;
    
  }
  .if_container .img3 {
    grid-column: 1/3;
    grid-row: 2/4;
    z-index: 3;
  }

  .if_container .img3 img {
    max-height: 100%;
    padding-left: 10%;
  }

  .blue {
    width: 100dvw;

    grid-column: 1/-1;
    grid-row: 3/-1;
    z-index: 1;

    background-color: var(--Primary_Blue);
  }

  /* beneath graphics */
  section {
    grid-column: 1/-1;
    grid-row: 2/-1;
    width: 100dvw;
    height: 700px;
    background-color: var(--Primary_Blue);

    display: grid;
    grid-template-columns: 1fr 55%;
    grid-template-rows: 70% 1fr;
  }
.about_img {
    grid-column: 1/2;
    grid-row: 1/2;
}
.about_img img {
    border-radius: 10px;
    max-width: 60%;
    max-height: 100%;
    margin-left: 20% ;
}
.txt_container {
    grid-column: 2/-1;
    grid-row: 1/-1;
    padding: var(--gap1);

    display: flex;
    flex-direction: column;
    row-gap: var(--gap1);
}

.text_container .phvid {
    color: var(--p_color2);
    width: 65ch;
}
h3 span {
    margin-left: 25%;
}
</style>
