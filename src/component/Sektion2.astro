<style>
  .sektion_container {
    width: 100dvw;
    height: fit-content;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 100px 1fr 100px;
  }
  h2 {
    height: 100px;
    grid-column: 1/-1;
    grid-row: 1/2;
    justify-self: center;
    align-self: last baseline;
  }
  .text_left_container {
    height: fit-content;
    grid-column: 1/2;
    grid-row: 1/3;

    display: grid;
    grid-template-columns: 15% 1fr 1fr;
    grid-template-rows: 20% 20% 1fr 1fr 1fr;
  }
  .img1 {
    grid-column: 1/3;
    grid-row: 1/3;
    z-index: 2;
    max-height: 300px;
    width: 100%;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }
  .img1 img {
    grid-column: 1/-1;
    grid-row: 1/-1;
    max-width: 100%;
    min-height: 200px;
    max-height: 100%;
    aspect-ratio: 0.84:1;
    justify-self:start;
    align-self: last baseline;
  }
  .menu {
    grid-column: 2/-1;
    grid-row: 2/-1;
    z-index: 3;
  }

  .menu img {
    width: 70%;
  }
  .text_right_container {
    grid-column: 1/-1;
    grid-row: 2/3;

    column-gap: 6rem;
    padding-right: var(--gap2);
    padding-bottom: var(--gap4);
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr;
    z-index: 1;

    background-color: var(--Secondary_Sand);
  }
  .text_right_container img{
    border-radius: 10px;
    width: 60%;
  }
  .event_container {
    grid-column: 2/-1;
    grid-row: 1/-1;
  }
  .event_container h2 {
    margin-top: var(--gap4);
  }
  .event_container p:last-of-type {
    margin-bottom: var(--gap2);
  }
  .img3 {
    grid-column: 2/-1;
    grid-row: 1/-1;
    z-index: 2;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr 1fr;
    justify-items: end;
  }
  .img31 {
